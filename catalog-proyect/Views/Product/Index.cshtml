@model catalog_proyect.Models.CatalogFrontData


<div class="container p-1">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Products Catalog</h1>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary">

                Create new Product
            </a>
            
        </div>
    </div>

    <br />  <br />  

    @if(Model.products.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>

                    <th>
                        Amount
                    </th>

                    <th>
                        Creation Date
                    </th>

                    <th>
                        Category
                    </th>
                    <td >
                       
                    </td>

                </tr>
            </thead>

            <tbody>
                @foreach(var product in Model.products)
                {
                <tr>

                    <td width="20%">
                        @product.id
                    </td>

                    <td width="20%">
                        @product.name
                    </td>

                    <td width="20%">
                        @product.price
                    </td>

                    <td width="20%">
                        @product.amount
                    </td>

                    <td width="20%">
                        @product.creationDate
                    </td>
                    <td width="20%">
                        @foreach (var category in Model.categories)
                        {

                            @if (@category.id == @product.categoryId)
                            {
                                <p>@category.name</p>

                            }

                        }
                    </td>

                    <td width="20%">

                        <div class="w-75 btn-group" role="group">

                            <a asp-controller="Product" asp-action="EditProduct"  asp-route-id="@product.id" class="btn btn-primary bg-success mx-2">
                                Edit
                            </a>

                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.id" class="btn btn-primary bg-danger mx-2">
                                Dele
                            </a>

                        </div>
                        

                        
                    </td>
                </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p> No Product exist in DB</p>
    }

</div>


